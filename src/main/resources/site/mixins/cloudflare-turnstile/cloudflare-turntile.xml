<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<mixin xmlns="urn:enonic:xp:model:1.0">
  <display-name>Cloudflare Turnstile</display-name>

  <form>
    <field-set>
      <label>Cloudflare Turnstile</label>
      <items>
        <input type="TextLine" name="turnstileSiteKey">
          <label>Turnstile Site Key</label>
          <occurrences minimum="1" maximum="1"/>
        </input>

        <input type="TextLine" name="turnstileSecretKey">
          <label>Turnstile Secret Key</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
      </items>
    </field-set>
  </form>
</mixin>
